import 'src/Application/Application.dart';
import 'src/Util/GlobalConstants';
import 'test/unitTest/testMain';
import 'dart:io';
import 'test/unitTest/MaqeBot/TestMaqeBot';
import 'test/unitTest/parser/TestParser';
import 'test/unitTest/validation/TestValidate';

class Director {
  void direct() {
    stdout.writeln('write "T" For Test, "R" For Run:');
    String input = stdin.readLineSync();
    switch(input) {
      case GlobalConstants.RUN_APP :
        Application app = Application.getInstance();
        app.runApp();
        break;

      case GlobalConstants.TEST_APP :
        TestMain().tests();
        break;
        
      default :
        print('Invalid Input!');
        print('Exiting...');
        exit(0);
        break;
    }
  }
}